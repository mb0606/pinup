= simple_form_for @pin, html: {mutipart:true} do |f|
	- if @pin.errors.any?
		#errors
			%h2
			= pluralize(@pin.errors.count, "error")
			prevented this Pin from saving
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		%p= f.input :title, input_html: { class: 'form-control'}

	.form-group
		%p= f.input :description, label: 'Pin description',input_html: { class: 'form-control'}

	= f.button :submit, class: "btn btn-primary"